[core]
    excludesfile = ~/dotfiles/.gitignore_global
    editor = vim
[pager]
    diff = false
[alias]
    c = commit
    ca = commit --amend
    can = commit --amend --no-edit

    s = status

    prune = fetch --prune

    glog = log --graph --decorate --pretty=format:'%C(blue)%d%Creset %C(yellow)%h%Creset %s, %C(bold green)%an%Creset, %C(green)%cd%Creset' --date=relative --all

    g = grep

    last = log -p -1

    aa = add --all

    df = diff
    dc = diff --cached

    undo = reset --hard

    tags = tag -l
    branches = branch -a
    remotes = remote -v

    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'

    fu = fetch upstream

    mffo = merge --ff-only

    delete-merged-branches = "!git checkout master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

[commit]
  gpgSign = true
